doctype html
html
    head
        include head.pug
        link(rel="stylesheet" href="/css/login.css")
    body
        include navbar.pug
        div#login-container.content
            div#login-left-container
                #login-fav-title Favorites
            div#login-right-container
                div#login-form-container.control
                    div#login-user-container.field.is-horizontal
                        .field-label.is-normal
                            label.label(for="user") Username
                        .field-body
                            .field
                                input(type="text" id="user" value="" placeholder="user")
                    div#login-pass-container.field.is-horizontal
                        .field-label.is-normal
                            label.label(for="pass") Password
                        .field-body
                            input(type="password" id="pass" value="" placeholder="pass")
                    div#login-host-container.field.is-horizontal
                        .field-label.is-normal
                            label.label(for="host") Host
                        .field-body
                            input(type="text" id="host" value="" placeholder="host")
                    div#login-port-container.field.is-horizontal
                        .field-label.is-normal
                            label.label(for="port") Port
                        .field-body
                            input(type="text" id="port" value="" placeholder="port")
                    div#login-db-container.field.is-horizontal
                        .field-label.is-normal
                            label.label(for="db") Database
                        .field-body
                            input(type="text" id="db" value="" placeholder="DB")

                div#login-btn-container
                    button.button(id="test")
                        span Test connection
                        span.icon.is-small
                            i.test-icon.fas

                    button.button(id="login") Login 

        script(type='module' src='/js/login.js')
