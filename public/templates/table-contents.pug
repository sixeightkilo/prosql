#app-content
    #app-left-panel-container
        #app-left-panel
            div#tables-list
                div Tables and Views
                div 
                    i.fas.fa-file-export#export-table(title="Export selected table contents")
            div.field
                p.control.has-icons-left
                    input.input(type="text" id="table-filter" placeholder="Search tables")
                    span.icon.is-small.is-left
                        i.fas.fa-search
            div#tables
            div#table-info Table Info

    #app-content-resizer

    #app-right-panel
        #search-bar
            div Search
            div.select.is-small
                select#column-names
            div.select.is-small
                select#operators
            div
                input.input.is-small#search-text(type="text")
            div
                button.button.is-small#search Filter
            div
                i.fas.fa-file-export#export-filtered-results(title="Export filtered results")
                i.fas.fa-forward#next(title="Next rows")
        #table-contents

    script(type="code" id="table-template")
        div
            i.icon-table 
            span.table-name {table}

    script(type="code" id="dropdown-item-template")
        a.dropdown-item(href="#") {item}
